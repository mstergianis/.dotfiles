    timeout 1 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"; pkill -nx swayidle'

exec swayidle -w \
       lock 'swaylock -f' \
       timeout 300 'swaylock -f' \
       timeout 300 'swaymsg "output * dpms off"' \
       resume 'swaymsg "output * dpms on"' \
       before-sleep 'swaylock -f'
